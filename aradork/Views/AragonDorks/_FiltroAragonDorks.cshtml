@model IEnumerable<aradork.Models.AragonDorks>

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <form asp-action="SearchDorks" method="get" class="form-inline">
            <div class="input-group w-100">
                <input type="search" 
                       name="searchTerm" 
                       class="form-control form-control-lg" 
                       placeholder="Buscar dorks por nombre, valor o descripción..."
                       aria-label="Buscar">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                </div>
            </div>
        </form>
        
        <div class="mt-3">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus-circle"></i> Nuevo Dork
            </a>
        </div>
    </div>
</div>